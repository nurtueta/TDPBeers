<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	 <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true"/>
    <package name="default" namespace="/" extends="struts-default">
       
        <action name="Usuario" class="action.UsuarioAction" >
        	<result name="error">/index.jsp</result>
        	<result name="success">/administrador.jsp</result>
        </action>
        
        <action name="Modificar" class="action.EditarAction" >
        	<result name="modificar">/administrador.jsp</result>
        	<result name="eliminar">/administrador.jsp</result>
        </action>
        
        <action name="index">
        	<result>/index.jsp</result>
        </action>
    </package>
</struts>