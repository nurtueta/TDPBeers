<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	 <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true"/>
    <package name="default" namespace="/" extends="struts-default">
       
        <action name="Usuario" class="action.UsuarioAction" >
        	<result name="error">/index.jsp</result>
        	<result name="success">/administrador.jsp</result>
        </action>
        
        <action name="Editar" class="action.EditarAction">
        	<result name="modificar">/modificar.jsp</result>
        	<result name="eliminar">/administrador.jsp</result>
        </action>
        
        <action name="Modificar" class="action.EditarAction" method="modificarCerveceria">
        	<result name="success">/administrador.jsp</result>
        </action>
        
        <action name="Agregar" class="action.EditarAction" method="agregarCerveceria">
        	<result name="success">/administrador.jsp</result>
        </action>
        
        <action name="Index">
        	<result>/index.jsp</result>
        </action>
        
        <action name="Administrador">
        	<result>/administrador.jsp</result>
        </action>
        
       <action name="PaginaAgregar">
        	<result>/agregar.jsp</result>
        </action>
        
    </package>
</struts>